{
    "extends": ["prettier", "eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "legacyDecorators": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true,
        "mocha": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.6.0"
        }
    },
    "plugins": ["react"],
    "rules": {
        "prefer-const": "error",
        "no-console": "off",
        "react/display-name": "off"
    }
}
